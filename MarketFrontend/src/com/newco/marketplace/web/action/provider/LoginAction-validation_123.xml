<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
        
<validators>
  <field name="username">
     <field-validator type="requiredstring">
           <param name="trim">true</param>
           <message key="login.username.required.error" />
      </field-validator>
  </field>
  <field name="password">
     <field-validator type="requiredstring">
          <param name="trim">true</param>
          <message key="login.password.required.error" />
      </field-validator>
  </field>  
</validators>